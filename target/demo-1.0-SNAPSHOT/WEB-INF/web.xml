<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add_activity</servlet-name>
        <jsp-file>/WEB-INF/jsp/add_activity.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_activity</servlet-name>
        <url-pattern>/add_activity</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>edit_timelogs</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/edit_timelogs.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit_timelogs</servlet-name>
        <url-pattern>/edit_timelogs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view_users</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/view_users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>view_users</servlet-name>
        <url-pattern>/view_users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>activities</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/activities.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>activities</servlet-name>
        <url-pattern>/activities</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>view_categories</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/view_categories.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>view_categories</servlet-name>
        <url-pattern>/view_categories</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>unapproved</servlet-name>
        <jsp-file>/WEB-INF/jsp/admin/unapproved.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>unapproved</servlet-name>
        <url-pattern>/unapproved</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>write_timelog</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/write_timelog.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>write_timelog</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>error_page</servlet-name>
        <jsp-file>/WEB-INF/jsp/error_page.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>error_page</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.example.demo.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>addCategory approve editCategory deleteUser deleteCategory view_users view_categories
                unapproved admin register_admin
            </param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>addLog editTimelog edit_timelogs activities write</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand addActivity deleteActivity add_activity</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login register error</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>MainServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>add_activity</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>edit_timelogs</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>view_users</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>view_categories</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>unapproved</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>admin</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>activities</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>write_timelog</servlet-name>
    </filter-mapping>


</web-app>